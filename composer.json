{
    "name": "ezsystems/ezplatform-code-style",
    "description": "Ibexa Code Style knowledge base",
    "type": "internal",
    "license": "(GPL-2.0-only or proprietary)",
    "authors": [
        {
            "name": "Ibexa Engineering",
            "email": "ibexa@users.noreply.github.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "friendsofphp/php-cs-fixer": "^2.17",
        "adamwojs/php-cs-fixer-phpdoc-force-fqcn": "^1.1"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "EzSystems\\EzPlatformCodeStyle\\": "src/lib/"
        }
    },
    "scripts": {
        "fix-cs": "@php ./vendor/bin/php-cs-fixer fix -v --show-progress=estimating"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
